<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 扫描bean -->
    <context:component-scan base-package="com.young.bean.load"/>

    <!-- 实现了用户自定义初始化和销毁方法 -->
    <bean id="book" class="com.young.bean.load.Book" init-method="myPostConstruct" destroy-method="myPreDestroy">
        <!-- 注入bean 属性名称 -->
        <property name="bookName" value="thinking in java"/>
    </bean>

    <bean id="bookClass" class="com.young.bean.load.SubBookClass" init-method="myPostConstruct" destroy-method="myPreDestory">
        <property name="bookSystem" value="Java System" />
    </bean>

    <!--引入自定义的BeanPostProcessor-->
    <bean class="com.young.bean.load.MyBeanPostProcessor"/>
    <bean class="com.young.bean.load.MyBeanFactoryPostProcessor"/>

</beans>
